<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalhesAlunoActivity">

    <TextView
        android:id="@+id/detalhes_aluno_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nome" />

    <TextView
        android:id="@+id/detalhes_aluno_curso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/detalhes_aluno_nome"
        app:layout_constraintStart_toStartOf="@+id/detalhes_aluno_nome"
        app:layout_constraintTop_toBottomOf="@+id/detalhes_aluno_nome"
        tools:text="Curso" />

    <TextView
        android:id="@+id/detalhes_aluno_media"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/detalhes_aluno_curso"
        app:layout_constraintStart_toStartOf="@+id/detalhes_aluno_curso"
        app:layout_constraintTop_toBottomOf="@+id/detalhes_aluno_curso"
        tools:text="MÃ©dia" />
</androidx.constraintlayout.widget.ConstraintLayout>